extend layout

block content
  h1= article.title
  h3 written by #{author}
  p= article.body
  hr
  if user
    if user.id==article.author
      a.btn.btn-warning(href='/articles/edit/'+article._id) Edit Article
      hr
      span(style='padding-left:200px')
      a.btn.btn-danger.delete-article(href='#',data-id=article._id) Delete 
